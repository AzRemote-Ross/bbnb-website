---
import BookingButton from '../../../components/BookingButton';
import { t } from '../../../i18n';
import Base from '../../../layouts/Base.astro';
const lang = 'en' as const;
const copy = t(lang);
---

<Base>
  <!-- Hero Section -->
  <section class="section-padding bg-hero-gradient">
    <div class="text-center">
      <h1 class="font-display text-5xl md:text-6xl font-bold mb-6 text-gradient">
        Women's Services
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Elegant styling and precision cuts designed to enhance your natural beauty. Expert color treatments and personalized consultations.
      </p>
      
      <div class="max-w-4xl mx-auto mb-12">
        <img
          src="https://images.unsplash.com/photo-1580618672591-eb180b1a973f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80"
          alt="Professional women's hair styling"
          class="w-full h-[400px] object-cover rounded-3xl shadow-warm-lg"
        />
      </div>

      <BookingButton client:load lang={lang} />
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-padding">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Precision Cuts -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1562322140-8baeececf3df?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Women's precision haircut"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Precision Cuts</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Expert cutting techniques tailored to your face shape and lifestyle. From classic bobs to modern layers.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">From ¥4,500 • 45-60 min</p>
        </div>
      </div>

      <!-- Color Treatments -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1595475884563-a5bb_e4c31ea?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Professional hair coloring"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Color Treatments</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Full color services including highlights, lowlights, balayage, and corrective color. Premium color products used.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">From ¥6,500 • 90-120 min</p>
        </div>
      </div>

      <!-- Styling & Blowouts -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Professional hair styling and blowout"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Styling & Blowouts</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Professional styling for any occasion. Smooth blowouts, curls, updos, and special event styling.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">From ¥3,500 • 30-45 min</p>
        </div>
      </div>

      <!-- Hair Treatments -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1522336572468-97b06e8ef143?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Deep conditioning hair treatment"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Hair Treatments</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Nourishing treatments to restore and maintain healthy hair. Deep conditioning, protein treatments, and scalp care.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">From ¥3,000 • 30-45 min</p>
        </div>
      </div>

      <!-- Eyebrow Shaping -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1516975080664-ed2fc6a32937?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Professional eyebrow shaping"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Eyebrow Shaping</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Professional eyebrow shaping and grooming to frame your face perfectly. Precise trimming and shaping techniques.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">From ¥2,000 • 20-30 min</p>
        </div>
      </div>

      <!-- Consultation -->
      <div class="card-modern p-8">
        <div class="mb-6">
          <img 
            src="https://images.unsplash.com/photo-1633681926022-84c23e8cb2d6?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
            alt="Hair consultation with stylist"
            class="w-full h-48 object-cover rounded-xl"
          />
        </div>
        <h3 class="font-display text-2xl font-semibold text-barbershop-gold-600 mb-3">Style Consultation</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          Personalized consultation to find the perfect style for your lifestyle, face shape, and hair type.
        </p>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <p class="font-semibold text-barbershop-gold-600">Complimentary • 15 min</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Special Offers -->
  <section class="section-padding bg-barbershop-gold-50 dark:bg-barbershop-gold-900/20">
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl font-bold text-gray-900 dark:text-white mb-4">Special Packages</h2>
      <p class="text-gray-600 dark:text-gray-300 text-lg max-w-2xl mx-auto">
        Combination services for the complete beauty experience
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <div class="card-modern p-8 text-center">
        <h3 class="font-display text-xl font-semibold text-barbershop-gold-600 mb-4">Complete Makeover</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">Cut + Color + Style + Treatment</p>
        <p class="text-2xl font-bold text-barbershop-gold-600">¥12,500</p>
        <p class="text-sm text-gray-500">Save ¥2,000</p>
      </div>
      
      <div class="card-modern p-8 text-center">
        <h3 class="font-display text-xl font-semibold text-barbershop-gold-600 mb-4">Refresh & Style</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">Cut + Blowout + Eyebrow Shaping</p>
        <p class="text-2xl font-bold text-barbershop-gold-600">¥7,500</p>
        <p class="text-sm text-gray-500">Save ¥1,000</p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-warm-100 dark:bg-gray-800">
    <div class="text-center">
      <h2 class="font-display text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Discover Your Perfect Style
      </h2>
      <p class="text-gray-600 dark:text-gray-300 text-lg mb-8 max-w-2xl mx-auto">
        Let our expert stylists help you achieve the look you've always wanted.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <BookingButton client:load lang={lang} />
        <a href="/en/contact" class="btn-secondary">Schedule Consultation</a>
      </div>
    </div>
  </section>
</Base>