---
import Base from '../../layouts/Base.astro';
---

<Base>
  <h1 class="text-3xl font-bold mb-4">Contact</h1>
  <div class="grid gap-4 md:grid-cols-2">
    <div class="rounded-2xl border p-6">
      <h2 class="font-semibold mb-2">Hours</h2>
      <p>Mon–Sat 10:00–19:00</p>
    </div>
    <div class="rounded-2xl border p-6">
      <h2 class="font-semibold mb-2">Phone</h2>
      <p><a href="tel:+819012345678" class="hover:underline">+81 90-1234-5678</a></p>
    </div>
  </div>
</Base>
