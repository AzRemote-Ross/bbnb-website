---
import { categories } from '../../../data/pricing';
import Base from '../../../layouts/Base.astro';
---

<Base>
  <h1 class="text-3xl font-bold mb-6">メニュー</h1>
  <ul class="grid gap-4 md:grid-cols-2">
    {categories.map(c => (
      <li class="rounded-2xl border p-6 hover:bg-black/5 dark:hover:bg-white/10">
        <a href={`/ja/services/${c.slug}`}>{c.ja}</a>
      </li>
    ))}
  </ul>
</Base>
